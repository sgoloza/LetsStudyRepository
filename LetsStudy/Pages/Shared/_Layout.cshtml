@model dynamic
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LetsStudy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body class="bg-white">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">

                <div class="modal fade" id="LoginModal" tabindex="-1" role="dialog" aria-labelledby="WrittingToUs" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="LoginModalLongTitle">Login</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <form method="post">
                                <div class="modal-body">
                                    <input id="BookingDateMessage1" type="text" value="" hidden />
                                    <div class="rounded row" style="margin:0 -16px 8px -4px">
                                        <div class="rounded col-12 ">
                                            <input class="form-control" type="email" placeholder="Your Email" required name="Email"><br />
                                            <input class="form-control" type="password" placeholder="password" required name="Password">
                                        </div>
                                    </div>
                                    <div class="rounded row" style="margin:0 -16px 8px -4px">
                                        <div class="rounded col-12 ">
                                            <a  href="~/images/backgraound/background.png" class="text-center">Forgot password?</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer border-0">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary ">Login</button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>


                <div class="modal fade" id="RegisterModal" tabindex="-1" role="dialog" aria-labelledby="WrittingToUs" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="RegisterModalLongTitle">Register</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <form method="post">
                                <div class="modal-body">
                                    <input id="BookingDateMessage1" type="text" value="" hidden />
                                    <div class="rounded row" style="margin:0 -16px 8px -16px">
                                        <div class="rounded col-6">
                                            <input class="form-control" type="text" placeholder="Name" required name="Name">
                                        </div>
                                        <div class="rounded col-6">
                                            <input class="form-control" type="text" placeholder="Email" required name="Email">
                                        </div>
                                    </div>
                                    <textarea class="form-control " type="text" placeholder="Message" required name="Message"></textarea>
                                    <br>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">Send Message</button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a id="Books" class="nav-link text-dark" asp-area="" asp-page="/Index" onclick="NavBarLinkCliked('Books')">Books</a>
                        </li>
                        <li class="nav-item">
                            <a id="Past_Papers" class="nav-link text-dark" asp-area="" asp-page="/Privacy" onclick="NavBarLinkCliked('Past_Papers')">Past Papers</a>
                        </li>
                        <li class="nav-item">
                            <a id="Turtorials" class="nav-link text-dark" asp-area="" asp-page="/Privacy" onclick="NavBarLinkCliked('Turtorials')">Turtorials</a>
                        </li>
                        <li class="nav-item">
                            <a id="Practical_Tests" class="nav-link text-dark" asp-area="" asp-page="/Privacy" onclick="NavBarLinkCliked('Practical_Tests')">Practical Tests</a>
                        </li>
                        <li class="nav-item">
                            <a id="Advice" class="nav-link text-dark" asp-area="" asp-page="/Privacy" onclick="NavBarLinkCliked('Advice')">Advice</a>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <div id="login-register" class="collapse navbar-collapse">
                            <ul class="navbar-nav align-self-end">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" data-toggle="modal" data-target="#LoginModal">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" data-toggle="modal" data-target="#RegisterModal">Register</a>
                                </li>
                            </ul>
                        </div>
                    </form>
                </div>

            </div>
        </nav>
    </header>
    <div id="main-container" class="container">
        <main role="main" class="pl-xl-5 align-content-xl-stretch">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container text-wrap">
            &copy; @DateTime.Today.Year - LetsStudy - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
