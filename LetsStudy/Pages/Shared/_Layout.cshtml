<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LetsStudy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body class="bg-white">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Past Papers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Turtorials</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Practical Tests</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Advice</a>
                        </li>
                    </ul>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Register</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div  id="main-container" class="container">
        <main role="main" class="pl-xl-5 align-content-xl-stretch">
            @RenderBody()
            <br /> <br /> <br /> <br />  <br /><br /><br /><br />
        </main>
    </div>

    <footer id="footer" class="footer bg-white">
        <div class="container text-center">
            <hr class="col-12" />
            <div id="contact">
                <div class="rounded row">
                    <div class="rounded col-6">
                        <i class="fa fa-map-marker" style="width:30px"></i> Chicago, US<br>
                        <i class="fa fa-phone" style="width:30px"></i> Phone: +00 151515<br>
                        <i class="fa fa-envelope" style="width:30px"> </i> Email: mail@mail.com<br>
                    </div>
                    <div class="rounded col-6">
                        <p><i>Fan? Drop a note!</i></p>
                        <form action="/action_page.php" target="_blank">
                            <div class="rounded row" style="margin:0 -16px 8px -16px">
                                <div class="rounded col-6">
                                    <input class="form-control" type="text" placeholder="Name" required name="Name">
                                </div>
                                <div class="rounded col-6">
                                    <input class="form-control" type="text" placeholder="Email" required name="Email">
                                </div>
                            </div>
                            <textarea class="form-control " type="text" placeholder="Message" required name="Message"></textarea>
                            <button class="btn btn-primary btn-lg" type="submit">SEND</button>
                        </form>
                    </div>
                </div>
            </div>
            &copy; @DateTime.Today.Year - LetsStudy - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
